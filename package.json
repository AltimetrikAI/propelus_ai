{
  "name": "propelus-ai-taxonomy",
  "version": "1.0.0",
  "description": "Healthcare Profession Taxonomy Framework - TypeScript Edition",
  "private": true,
  "workspaces": [
    "lambdas/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:na-nodes": "ts-node scripts/test-na-nodes.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "migrate": "ts-node scripts/run-migrations.ts migrate",
    "migrate:status": "ts-node scripts/run-migrations.ts status",
    "clean": "rm -rf dist node_modules lambdas/*/dist lambdas/*/node_modules services/*/dist services/*/node_modules"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
